<%= turbo_frame_tag dom_id(@profile) do %>
  <div class="card w-full bg-base-100 shadow mt-2">
    <div class="card-body">
      <%= form_with(model: @profile) do |form| %>
        <div>
          <%= form.label :avatar, class: "label" %>
          <%= form.file_field :avatar, class: "file-input file-input-bordered w-full max-w-xs"  %>
        </div>
        <div>
          <%= form.label :display_name, class: "label" %>
          <%= form.text_field :display_name, class: "input input-bordered w-full max-w-xs", placeholder: "Enter Display name"  %>
        </div>
        <div>
          <%= form.label :bio, class: "label" %>
          <%= form.text_area :bio, class: "input input-bordered w-full max-w-xs", placeholder: "Enter Bio" %>
        </div>
        <div class="card-actions justify-end">
          <%= link_to "Cancel", edit_page_path(@profile.user.page), class: "btn btn-outline mr-2" %>
          <%= form.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
