<div class="flex justify-center pt-28">
  <div class="card card-bordered w-96 bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: "false" } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full max-w-xs" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
