<%= turbo_frame_tag "preview_#{dom_id(@page)}" do %>
  <div class="artboard phone-1 bg-white rounded-3xl border border-gray-800 border-8 overflow-y-auto">
    <div class="m-6 text-center">
      <%= current_user.username %>
      <%= turbo_frame_tag "preview-elements" do %>
        <% @page.elements.order(position: :asc).each do |element| %>
          <%= render "pages/elements/#{element.element_type}", element: element %>
        <% end %>
      <% end %>
      <div class="mt-4" data-controller="twitter" data-handle="jamgar2020">
        <div class="h-96" data-twitter-target="link"></div>
      </div>
  </div>
<% end %>

