<div class="text-center">
  <div>
    <% if profile.avatar.attached? %>
      <div class="avatar my-4">
        <div class="w-24 rounded">
          <%= image_tag url_for(profile.avatar) %>
        </div>
      </div>
    <% end %>
  </div>
  <p class="font-bold" style="color:<%= text_color(page.theme.text_color) %>"><%= profile.display_name %></p>
  <p style="color:<%= text_color(page.theme.text_color) %>"><%= profile.bio %></p>
</div>
<div class="divider"></div>
