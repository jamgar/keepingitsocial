<%= turbo_frame_tag "preview-#{dom_id(element)}" do %>
  <div class="card bg-base-100 border mt-4">
    <div class="card-body">
      <%= link_to element.youtube, target: "_blank" do %>
      <h2 class="card-title"><%= element.title %></h2>
      <% end %>
    </div>
    <figure>
      <iframe 
              width="100%" 
              height="100%" 
              src="https://www.youtube.com/embed/<%= element.youtube.split('/').last %>" 
              title="YouTube video player" 
              frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                              allowfullscreen>
      </iframe>
    </figure>
  </div>
<% end %>
